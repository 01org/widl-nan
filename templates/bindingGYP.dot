{
  "targets": [
    {
      "target_name": "widlNanAddon", # Change to your addon name
      "sources": [
        "addon.cpp",
{{ for ( var x in it) { }}
{{~ it[x] :idl:index }}
{{ for (var y in idl) { }}
{{? y == "implCpp" }}
{{~ idl[y] :impl:index2 }}
        "{{=impl.name}}",
{{~}}
{{?? y == "wrapperCpp" }}
{{~ idl[y] :wrapper:index2 }}
        "gen/{{=wrapper.name}}",
{{~}}
{{?}}
{{ } }}
{{~}}
{{ } }}
      ],
      "include_dirs": [
        "<!(node -e \"require('nan')\")",
        "/usr/local/include",
        "."
      ],
      "cflags!": [
        "-fno-exceptions"
      ],
      "cflags": [
        "-std=c++11"
      ],
      "cflags_cc!": [
        "-fno-exceptions"
      ],
      "libraries": [
      ],
      "xcode_settings": {
        "OTHER_CFLAGS": [
          "-std=c++11"
        ]
      },
      "conditions": [
        [
          "OS!=\"win\"",
          {
            "cflags+": [
              "-std=c++11"
            ],
            "cflags_c+": [
              "-std=c++11"
            ],
            "cflags_cc+": [
              "-std=c++11"
            ]
          }
        ],
        [
          "OS==\"mac\"",
          {
            "xcode_settings": {
              "OTHER_CPLUSPLUSFLAGS": [
                "-std=c++11",
                "-stdlib=libc++"
              ],
              "OTHER_LDFLAGS": [
                "-stdlib=libc++"
              ],
              "GCC_ENABLE_CPP_EXCEPTIONS": "YES",
              "MACOSX_DEPLOYMENT_TARGET": "10.8"
            }
          }
        ]
      ]
    }
  ]
}
